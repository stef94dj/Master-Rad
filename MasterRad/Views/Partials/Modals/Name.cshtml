@model MasterRad.Models.ViewModels.NamePartialVM

<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="@Model.Id-input" class="col-form-label">@Model.Label:</label>
                    <input type="text" class="form-control" id="@Model.Id-input" maxlength="50" onkeyup="hideModalError($(this).parent());" />
                    <div class="alert alert-danger modal-error" role="alert" style="margin-top:15px; display:none;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary modal-confirm-btn">@Model.ConfirmButtonText</button>
            </div>
        </div>
    </div>
</div>