@model string

<div class="modal fade" id="@Model" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="@Model-textarea" class="col-form-label">Description:</label>
                    <textarea class="form-control" id="@Model-textarea" rows="10" maxlength="8191" onkeyup="hideModalError($(this).parent());"></textarea>
                    <div class="alert alert-danger modal-error" role="alert" style="margin-top:15px; display:none;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary modal-confirm-btn">Save</button>
            </div>
        </div>
    </div>
</div>