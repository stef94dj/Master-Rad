@model MasterRad.Models.ViewModels.ActionsPartialVM

<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actions</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="max-height: calc(100vh - 210px);overflow-y: auto;">
                <div class="form-group" style="margin: auto; max-width: 300px;">
                    <div class="row">
                        <div class="col-12">
                            <div class="list-group" role="tablist">
                                @foreach (var item in Model.Options)
                                {
                                    if (!string.IsNullOrEmpty(item.TargetModalId))
                                    {
                                        <button type="button" data-target="#@item.TargetModalId" data-toggle="modal" data-dismiss="modal" class="list-group-item list-group-item-action word-wrap-break">
                                            @item.Text
                                        </button>
                                    }
                                    else if (!string.IsNullOrEmpty(item.TargetUrl))
                                    {
                                        <a href="@item.TargetUrl" class="list-group-item word-wrap-break">
                                            @item.Text
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>