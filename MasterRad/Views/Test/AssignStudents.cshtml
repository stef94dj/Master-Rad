        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>*@
    </select>
</div>
<button onclick="assign()" type="button" class="btn btn-outline-primary">Assign</button>
<br/><br />

<table class="table table-striped table-sm table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Email</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="assigned-students">
        @for (int i = 0; i < 30; i++)
        {
            <tr data-id="@(i)">
                <td>Mark</td>
                <td>Otto</td>
                <td>mdo</td>
                <td><button type="button" class="btn btn-outline-danger btn-sm" style="float:right">Remove</button></td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script src="~/js/assignStudents.js" asp-append-version="true"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>
}
