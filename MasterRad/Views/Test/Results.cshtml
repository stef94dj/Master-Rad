@model MasterRad.Models.ViewModels.TestResultsVM
@{
    ViewData["Title"] = "Test results";
}

<div hidden>
    <input type="text" value="@(Model.TestId)" id="test-id">
    <input type="text" value="@((int)Model.TestType)" id="test-type">
</div>

<h1>Test results</h1>

<br />

<div class="row">
    <div class="col-md-12">
        <button id="start-evaluation-btn" onclick="startProgress()" class="btn btn-primary btn-lg disabled" disabled>Start evaluation</button>
    </div>
</div>
<br />

<partial name="../Partials/SignalRConnectionStatuses.cshtml" />
<!-- Results table -->
<table class="table table-bordered">
    <thead class="thead-dark" id="table-header">
        <tr id="test-evaluations-table">
            <th scope="col">Student</th>
            <th scope="col">Public Data Set</th>
            <th scope="col">Secret Data Set</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="evaluation-results-tbody"></tbody>
</table>

<!-- Create analysis test modal  -->
<div class="modal fade" id="create-analysis-test-modal" tabindex="-1" role="dialog" aria-labelledby="create-analysis-test-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="create-analysis-test-modal-label">Create analysis test</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="template-name" class="col-form-label">Name:</label>
                    <input type="text" class="form-control" id="analysis-test-name">
                    <input type="text" class="form-control" id="synthesis-paper-id" hidden>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="createAnalysisTest()">Create</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/signalr/signalr.js"></script>

    <script src="~/js/util.js"></script>
    <script src="~/js/enums.js"></script>
    <script src="~/js/signalR_utils.js"></script>

    <script src="~/js/results.js"></script>
}
