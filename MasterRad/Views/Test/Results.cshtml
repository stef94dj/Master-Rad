@model MasterRad.Models.ViewModels.TestResultsVM
@{
    ViewData["Title"] = "Test results";
}

<div hidden>
    <input type="text" value="@(Model.TestId)" id="test-id">
    <input type="text" value="@((int)Model.TestType)" id="test-type">
</div>

<h1>Test results</h1>

<br />

<div class="row">
    <div class="col-md-12">
        <button onclick="startProgress()" class="btn btn-primary btn-lg">Start evaluation</button>
    </div>
</div>

<br />

<p>Status of your background job: <strong><span id="job-status">Waiting to start...</span></strong></p>

<br />
<!-- Results table -->
<br />
<table class="table table-bordered">
    <thead class="thead-dark" id="table-header">
        <tr id="test-evaluations-table">
            <th scope="col">Student</th>
            <th scope="col">Public Data Set</th>
            <th scope="col">Secret Data Set</th>
        </tr>
    </thead>
    <tbody id="test-evaluations-tbody">
        <tr student-id="101">
            <td>Petar Petrovic</td>
            <td>
                <div @*class="pipe-subtext*@">
                    <div @*class="active-rd-subtext flex-row flex-center"*@>
                        <svg @*class="bolt-status flex-noshrink active active-rd-left-pane-status-icon pending-icon"*@ height="24" @*role="presentation"*@ viewBox="0 0 12 12" width="24" @*xmlns="http://www.w3.org/2000/svg"*@>
                            <circle cx="6" cy="6" r="6" fill="red"></circle>
                            <path d="M6 2.6a.75.75 0 0 1 .75.75v2.439L8.122 7.16a.75.75 0 1 1-1.06 1.06L5.487 6.648A.747.747 0 0 1 5.25 6.1V3.35A.75.75 0 0 1 6 2.6z" fill="#ff2"></path>
                        </svg>
                        <div class="active-rd-approval-subtext pending-subtext">Queued</div>
                    </div>
                </div>
            </td>
            <td>
                <div class="active-rd-subtext flex-row flex-center"><svg class="bolt-status flex-noshrink success active-rd-left-pane-status-icon flex-noshrink" height="12" role="presentation" viewBox="0 0 12 12" width="12" xmlns="http://www.w3.org/2000/svg"><circle cx="6" cy="6" r="6"></circle><path d="M4.74 8.19l-.002-.002-1.29-1.29a.677.677 0 1 1 .958-.957l.813.812 2.804-2.805a.678.678 0 0 1 .959.958L5.7 8.188l-.002.002a.678.678 0 0 1-.958 0z" fill="#fff"></path></svg><div class="active-rd-environment-name-tooltip active-rd-subtitle-overflow">Pass</div></div>
            </td>
        </tr>
        <tr student-id="102">
            <td>Jana Janic</td>
            <td>
                <div class="active-rd-subtext flex-row flex-center"><svg class="bolt-status flex-noshrink failed active-rd-left-pane-status-icon flex-noshrink" height="12" role="presentation" viewBox="0 0 12 12" width="12" xmlns="http://www.w3.org/2000/svg"><circle cx="6" cy="6" r="6"></circle><path d="M3.64 3.64a.75.75 0 0 1 1.06 0l1.294 1.294L7.288 3.64a.75.75 0 0 1 1.06 1.06L7.056 5.994l1.292 1.292a.75.75 0 0 1-1.06 1.06l-1.295-1.29-1.291 1.291a.75.75 0 1 1-1.06-1.06l1.292-1.293L3.64 4.7a.75.75 0 0 1 0-1.06z" fill="#fff"></path></svg><div class="active-rd-environment-name-tooltip active-rd-subtitle-overflow">Fail</div></div>
            </td>
            <td>
            </td>
        </tr>
        <tr student-id="103">
            <td>Milos Milosevic</td>
            <td>
            </td>
            <td>
            </td>
        </tr>
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/signalr/signalr.js"></script>
    <script src="~/js/results.js"></script>
}
