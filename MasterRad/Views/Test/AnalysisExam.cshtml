@model MasterRad.Models.ViewModels.ModifyDatabaseVM
@{
    ViewData["Title"] = "Modify Data";
    var failingInputPartialModel = "failing-input";
    var studentOutputPartialModel = "student-output";
    var correctOutputPartialModel = "correct-output";
}

<h1>@(Model.DatabaseName)</h1>
<div>
    <input hidden class="uid uid-db" value="@failingInputPartialModel" data-name-on-server="@Model.NameOnServer" type="text">
    <input hidden class="uid uid-tb" value="@studentOutputPartialModel" type="text">
    <input hidden class="uid uid-tb" value="@correctOutputPartialModel" type="text">
</div>
<br />
<br />

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Failing Input</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Student Output</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Correct Output</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="failing-input-tab">
        <partial name="../Partials/ModifyDatabasePartial.cshtml" model="failingInputPartialModel" />
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="student-output-tab">
        <partial name="../Partials/ModifyTablePartial.cshtml" model="studentOutputPartialModel" />
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="correct-output-tab">
        <partial name="../Partials/ModifyTablePartial.cshtml" model="correctOutputPartialModel" />
    </div>
</div>

@section Scripts {
    <script src="~/js/modifyDatabasePartial.js" asp-append-version="true"></script>
    <script src="~/js/analysisExam.js" asp-append-version="true"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>

    <script src="~/js/tablesDropdown.js" asp-append-version="true"></script>
}
