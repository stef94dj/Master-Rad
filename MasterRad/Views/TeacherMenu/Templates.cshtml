@using MasterRad.Models.ViewModels

@{
    ViewData["Title"] = "Templates";
    var actionsModel = new ActionsPartialVM()
    {
        Id = "actions-modal",
        Options = new List<OptionModel>() {
            new OptionModel(){Text = "Name", TargetModalId = "update-name-modal"},
            new OptionModel(){Text = "Description", TargetModalId = "update-description-modal"},
            new OptionModel(){Text = "Model", UrlItemId = "model-url"},
            new OptionModel(){Text = "Data", UrlItemId = "data-url"},
            new OptionModel(){Text = "Create Task", TargetModalId = "create-task-modal"},
            new OptionModel(){Text = "Delete", TargetModalId = "confirm-delete-modal"}
        }
    };

    var nameModel = new NamePartialVM()
    {
        Id = "update-name-modal",
        Title = string.Empty,
        Label = "Name",
        ConfirmButtonText = "Update"
    };

    var createTemplateModel = new NamePartialVM()
    {
        Id = "create-template-modal",
        Title = "Create new template",
        Label = "Name",
        ConfirmButtonText = "Create"
    };

    var createTaskModel = new NamePartialVM()
    {
        Id = "create-task-modal",
        Title = string.Empty,
        Label = "Name",
        ConfirmButtonText = "Create"
    };

    var descriptionModel = "update-description-modal";
}

@section Styles {
    <link rel="stylesheet" href="~/css/datatable.css" />
    <link href="~/lib/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/pagination.css" />
}
<h1>Templates</h1>

<!--Pagination header-->
<table class="table table-bordered fixed" style="margin-bottom: 0px;">
    <thead id="filter-header">
        <tr>
            <th style="width: 16%;">
                <input type="text" class="form-control filter-text-input" placeholder="Name" id="search-first-name" maxlength="50" data-table-key="name">
            </th>
            <th style="width: 13%;"></th>
            <th style="width: 4%;"></th>
            <th style="width: 4%;">
                <input type="number" id="page-size" class="form-control" min="5" max="25" step="5" value="5" style="width:65px; display:inline" data-toggle="tooltip" data-placement="top" title="Items per page">
            </th>
        </tr>
    </thead>
</table>

<!-- Table content -->
<table class="table table-bordered table-striped fixed wrap-single-long-word">
    <thead class="thead-dark" id="table-header">
        <tr id="database-table">
            <th style="width: 16%">
                <span>Name</span>
                <i class="fa fa-fw fa-sort sort-icon" data-table-key="name"></i>
            </th>
            <th style="width: 13%">Author</th>
            <th style="width: 4%">
                <span>Created on</span>
                <i class="fa fa-fw fa-sort-down sort-icon" data-table-key="date_created"></i>
            </th>
            <th style="width: 4%">
                <button data-toggle="modal" data-target="#create-template-modal" type="button" class="btn btn-primary btn-sm">Create</button>
            </th>
        </tr>
    </thead>
    <tbody id="templates-tbody" />
</table>
<!-- Pagination footer -->
<partial name="../Partials/PaginationFooter.cshtml" />

<!--Create template modal-->
<partial name="../Partials/Modals/Name.cshtml" model="@createTemplateModel" />

<!--Actions modal-->
<partial name="../Partials/Modals/Actions.cshtml" model="@actionsModel" />

<!--Name modal-->
<partial name="../Partials/Modals/Name.cshtml" model="@nameModel" />

<!--Description modal-->
<partial name="../Partials/Modals/Description.cshtml" model="@descriptionModel" />

<!--Create task modal-->
<partial name="../Partials/Modals/Name.cshtml" model="@createTaskModel" />

<!--Confirm Delete modal-->


<!-- New template modal  -->
<div class="modal fade" id="create-template-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create new template</h5>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="template-name" class="col-form-label">Name:</label>
                    <input type="text" class="form-control" id="template-name" maxlength="50" onkeyup="hideModalError($(this).parent());" />
                    <div class="alert alert-danger modal-error" role="alert" style="margin-top:15px; display:none;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="createTemplate()">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Description modal  -->
<!-- Form -->
<form action="" hidden id="hidden-form" method="post">
    <input type="number" name="templateId" id="template-id" />
    <input type="submit" value="Submit" id="submit-btn" />
</form>

@section Scripts {
    <script src="~/js/enums.js" asp-append-version="true"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>
    <script src="~/js/pagination.js" asp-append-version="true"></script>
    <script src="~/js/modals/actionsModal.js" asp-append-version="true"></script>
    <script src="~/js/modals/nameModal.js" asp-append-version="true"></script>
    <script src="~/js/modals/descriptionModal.js" asp-append-version="true"></script>
    <script src="~/js/templates.js" asp-append-version="true"></script>
}
