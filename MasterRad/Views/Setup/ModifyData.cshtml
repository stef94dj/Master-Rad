@model MasterRad.Models.ViewModels.ModifyDataVM
@{
    ViewData["Title"] = "Modify Data";
}

<h1>@(Model.DatabaseName)</h1>
<input type="text" value="@(Model.NameOnServer)" id="name-on-server" hidden>

<label for="sel1">Choose a table from the list:</label>
<select class="form-control" id="tableSelector"></select>

<br /><br />

<div class="table-responsive">
    <table class="table table-sm table-bordered">
        <thead class="thead-dark" id="table-header" />
        <tbody id="table-body" />
    </table>
</div>

@section Scripts {
    <script src="~/js/modifyData.js" asp-append-version="true"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>
}
