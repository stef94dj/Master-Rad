<body onbeforeunload="unload()" style="background-color:rgb(52,58,64)">
   
    <br/><br />
    <h3 style="color:rgb(238,238,238); text-align:center;">Univerzitet u Beogradu, Elektrotehnički fakultet</h3>
    <h4 style="color:rgb(238,238,238); text-align:center;">Veb aplikacija za vežbanje MSSQL-a</h4>
    <div class="container">

        <div class="form-signin" style="background-color:rgb(238,238,238); min-width:50%; min-height:70%; margin-top:3%;">
            <h2 class="form-signin-heading" style="text-align:center;">Prijava</h2>
            <br />
            <input  id="inputUsername" class="form-control" placeholder="Korisnicko ime" required autofocus />
            <br />
            <input id="inputPassword" type="password"  class="form-control" placeholder="Lozinka" required>
            <br />
            <button class="btn btn-lg btn-primary btn-block" onclick="signIn()">Prijavi me</button>
            <br/>
            <input id="porukaID" style="display: none; color:red" class="form-control">
        </div>

    </div>

    <!--Load screen -->
    <div id="loadScreenID" class="loadScreen"></div>

    <!--JavaScript -->
    <script src="~/Scripts/Index.js"></script>
    <script src="~/Scripts/jquery-3.2.1.js"></script>

    <!--Browser close -->
    <script src="~/Scripts/browserClose.js"></script>


