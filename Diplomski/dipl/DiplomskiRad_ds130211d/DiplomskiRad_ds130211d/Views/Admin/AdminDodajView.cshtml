
@{
    Layout = null;
}

@model DiplomskiRad_ds130211d.Models.AdminTableViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Vežbaj SQL</title>

    <!--LoadScreen-->
    <link href="~/Content/loadScreen.css" rel="stylesheet" />

    <!--CodeMirror-->
    <link href="~/Content/CodeMirror/codemirror.css" rel="stylesheet" />

    <!-- Bootstrap core CSS-->
    <link href="~/Content/Theme/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="~/Content/Theme/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Page level plugin CSS-->
    <link href="~/Content/Theme/dataTables.bootstrap4.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/Content/Theme/sb-admin.css" rel="stylesheet" />
</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" style="color:white">Vežbaj SQL</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">

            <!--Left side menu-->
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">

                <!--Studenti-->
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Link">
                    <a class="nav-link" href="/Admin/ShowHome">
                        <span class="nav-link-text">Studenti</span>
                    </a>
                </li>

                <!--Baze-->
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Link">
                    <a class="nav-link" href="/Admin/ShowDatabases">
                        <span class="nav-link-text">Baze</span>
                    </a>
                </li>

                <!--Dodaj-->
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Link">
                    <a class="nav-link" href="/Admin/ShowAdd">
                        <span class="nav-link-text">Dodaj</span>
                    </a>
                </li>

            </ul>

            <!--??-->
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <>
                    </a>
                </li>
            </ul>

            <!--Top menu-->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <p class="nav-link" data-target="#exampleModal">
                        @Model.ImePrezime
                    </p>
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                        Odjavi se
                    </a>
                </li>

            </ul>
        </div>
    </nav>

    <!--Content-->
    <div class="content-wrapper">
        <div class="container-fluid">
            <br /><br />
            <h3> Dodaj studenta </h3>
            <br />
            <div>
                @using (Html.BeginForm("UploadStudent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group" style="width:40%">
                        <label for="exampleFormControlInput1">Korisnicko ime</label>
                        <input class="form-control" id="exampleFormControlInput1" placeholder="Korisnicko ime" name="un">
                        <br />

                        <label for="exampleFormControlInput1">Lozinka</label>
                        <input class="form-control" id="exampleFormControlInput1" placeholder="Lozinka" name="pass">
                        <br />

                        <label for="exampleFormControlInput1">Ime</label>
                        <input class="form-control" id="exampleFormControlInput1" placeholder="Ime" name="fn">
                        <br />

                        <label for="exampleFormControlInput1">Prezime</label>
                        <input class="form-control" id="exampleFormControlInput1" placeholder="Prezime" name="ln">
                        <br />

                        <label for="exampleFormControlInput1">Broj indeksa</label>
                        <input class="form-control" id="exampleFormControlInput1" placeholder="gggg/bbbb" name="ind">
                        <br />

                        <input type="submit" value="Dodaj studenta" />

                    </div>
                }
            </div>



            <br /><hr /><br />



            <h3> Dodaj Bazu </h3>
            <br />

            <div>
                @using (Html.BeginForm("UploadDatabase", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <h6>Backup fajl baze (.bak): </h6>
                        <br />
                        <input type="file" name="fileBackup" />
                        <br /><br />

                        <h6>Model baze (.png): </h6>
                        <br />
                        <input type="file" name="fileImage" />
                        <br /><br />

                        <h6>Opis baze:</h6>
                        <br />
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" name="dbDesc"></textarea>
                        <br />
                        <input type="submit" value="Dodaj bazu" />
                }
                <br />
            </div>

        </div>

        <!-- Copyright footer -->
        <footer class="sticky-footer" style="position: fixed; bottom: 0;">
            <div class="container">
                <div class="text-center">
                    <small>Copyright © Univerzitet u Beogradu, Elektrotehnički fakultet  2017</small>
                </div>
            </div>
        </footer>

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top" style="min-width:7%;text-decoration:none;">
            Nazad na vrh
        </a>
        <!-- Popup for logout-->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Želite da se odjavite?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Odaberite "Otkaži" ako želite da nastavite sa radom.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Otkaži</button>
                        <a class="btn btn-primary" href="/Home/SignOut">Odjavi se</a>
                    </div>
                </div>
            </div>
        </div>


        <!--Load screen -->
        <div id="loadScreenID" class="loadScreen"></div>

        <script src="~/Scripts/jquery-3.2.1.js"></script>

        <script src="~/Scripts/Admin.js"></script>

        <!-- Bootstrap core JavaScript-->
        <script src="~/Scripts/Theme/jquery.min.js"></script>
        <script src="~/Scripts/Theme/popper.min.js"></script>
        <script src="~/Scripts/Theme/bootstrap.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="~/Scripts/Theme/jquery.easing.min.js"></script>
        <!-- Page level plugin JavaScript-->
        <script src="~/Scripts/Theme/Chart.min.js"></script>
        <script src="~/Scripts/Theme/jquery.dataTables.js"></script>
        <script src="~/Scripts/Theme/dataTables.bootstrap4.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/Scripts/Theme/sb-admin.min.js"></script>
        <!-- Custom scripts for this page-->
        <script src="~/Scripts/Theme/sb-admin-datatables.min.js"></script>
        <script src="~/Scripts/Theme/sb-admin-charts.min.js"></script>
    </div>
</body>
</html>
